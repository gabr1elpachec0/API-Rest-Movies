generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Movie {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  releaseDate String
  genre       String
  rating      String   @default("Filme ainda n√£o avaliado!") 
  created_at  DateTime @default(now())
}
